mixin thread(thread)
    // Blog thread
    .card.mb-4
        //img.card-img-top(src='http://placehold.it/750x300' alt='Card image cap')
        .card-body
            .container-fluid
                .row
                    .col-sm-1.text-center
                        if (thread.user_vote == 1)
                            span.vote.upvote.thread.upvoted.oi.oi-arrow-top(title="upvote" data-thread-id=thread.id role="button" aria-hidden="true")
                        else
                            span.vote.upvote.thread.oi.oi-arrow-top(title="upvote" data-thread-id=thread.id role="button" aria-hidden="true")
                        br
                        span(id="thread-karma"+thread.id ) #{thread.total}
                        br
                        if (thread.user_vote == -1)
                            span.vote.thread.downvote.downvoted.oi.oi-arrow-bottom(title="downvote" data-thread-id=thread.id role="button" aria-hidden="true")
                        else
                            span.vote.thread.downvote.oi.oi-arrow-bottom(title="downvote" data-thread-id=thread.id role="button" aria-hidden="true")

                    //img.thread-preview-image(src="" onerror="this.onerror=null;this.src='https://www.redditstatic.com/avatars/avatar_default_11_FFD635.png';")
                    div
                        div
                            a(href='/c/' + thread.comunityName + '/' + thread.id + '/comments' )
                                h3.card-text #{thread.title}
        .card-footer.text-muted
            | submited on #{thread.createdAt} to
            |
            a(href="/c/"+thread.comunityName) #{thread.comunityName}
            |
            | by
            |
            a(href='/users/'+thread.username) #{thread.username}