extends base/layout_complex
block main
  .container-fluid
    .row
      .col-sm-1.text-center
        span.thread.upvote.oi.oi-arrow-top(title="upvote" data-thread-id=thread.id role="button" aria-hidden="true")
        br
        if thread.karma
          | #{thread.karma}
        else
          | 0
        br
        span.thread.downvote.oi.oi-arrow-bottom(title="downvote" data-thread-id=thread.id role="button" aria-hidden="true")
      h1.my-4 #{thread.title}
  
  // Author
  p.lead
    | by
    a(href='/users/'+username)  #{username}
  hr
  // Date/Time
  p Posted on #{thread.date}
  hr
  // Preview Image
  //img.img-fluid.rounded(src='http://placehold.it/900x300' alt='')
  hr
  // Post Content
  | #{thread.description}
  hr
  include elements/comment_submit
  
  include elements/comment
